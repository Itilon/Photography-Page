extends shared/_master
include shared/_navigation

block body
    main(id="particles-js")
        +navigation('contact')
        div(id="content-container")
            h2 Contact Me
            form(id="contact-form" action="/contact" method="post")
                div(class="input-group")
                    input(class="form-control" type="text" placeholder="Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Name'" required)
                    input(class="form-control" type="email" placeholder="Email Address" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Email Address'" required)
                    textarea(class="form-control" type="text" placeholder="Message" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Message'" required)
                    button(class="btn btn-default") Submit Your Message